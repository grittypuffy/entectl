apps:
  public-albums: https://albums.ente.{{ .Domain }}
  cast: https://cast.ente.{{ .Domain }}
  accounts: https://accounts.ente.{{ .Domain }}

db:
  host: postgres
  port: 5432
  name: ente_db
  user: pguser
  password: {{ .DB.Password }}

s3:
  are_local_buckets: false
  use_path_style_urls: true
  b2-eu-cen:
    key: {{ .S3.Key }}
    secret: {{ .S3.Secret }}
    endpoint: https://storage.ente.{{ .Domain }}
    region: eu-central-2
    bucket: b2-eu-cen

key:
  encryption: {{ .EncKey }}
  hash: {{ .HashKey }}

jwt:
  secret: {{ .JWTSecret }}

email:
  host: ""
  port: 587
  username: ""
  password: ""
  from: ""

internal:
  hardcoded-ott: "123456"
  
local:
  host-prefix: "http://localhost:{{ .MuseumPort }}"
